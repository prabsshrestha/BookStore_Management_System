@model List<Category> 
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h1 class="text-primary">Category List</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary p-2">
				<i class="bi bi-plus-circle p-1" style="margin-right: 8px;"></i>Create New Category
			</a>
		</div>
	</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Category Name
			</th>
			<th>
				Display Order
			</th>
			<th style="width: 250px;">
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach( var obj in Model.OrderBy(u => u.DisplayOrder))
		{
			<tr>
				<td>@obj.Name</td>
				<td>@obj.DisplayOrder</td>
				<td class="text-nowrap">
					<div class="w-50 btn-group" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">
								<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger">
							<i class="bi bi-trash-fill"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table> 
</div>